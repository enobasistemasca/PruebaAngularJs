div(class='container')
  div
    acme-navbar(creationDate='main.creationDate')
  
  div(class='row')
    div(class='col-md-12')
      div(class='well centrado')
        h3(id='mensaje-entrada') Panel de búsqueda  
        div(class='input-group') 
          span(class='input-group-addon')
            i(class='fa fa-search')   
          input(
            type='text', 
            placeholder = 'Escriba aquí para ejecutar su búsqueda', 
            class='form-control',
            ng-model='busqueda'
          )         
              
    div(class='col-md-12 centrado' ng-if="cantUsuarios > 0 && busqueda.length == 0")  
      h2 Cantidad de usuarios cargados: {{cantUsuarios}}  
    
    div(class='col-md-12 centrado' ng-if="busqueda.length > 0")  
        h2 Cantidad de resultados encontrados: {{users.length}}   
    
    div(
      class='col-sm-6 col-md-4' 
      ng-repeat="usuario in users = (resultados | orderBy: 'Name' | filter:busqueda)"
    )
      div(class='thumbnail centrado')
        img(ng-src='assets/images/icon-user-default.png', class='img-circle img-user', alt='usuario')
        div(class='caption')
          h3 {{usuario.name + " " + usuario.lastname}}
          p 
            span(class='label label-warning') {{usuario.email}}            
          p
            a(href='#' class = 'btn btn-primary edicion', role='button')
              i(class='fa fa-pencil-square-o')  Editar
            a(href='#', class = 'btn btn-danger', role='button')   
              i(class='fa fa-trash-o')  Eliminar
