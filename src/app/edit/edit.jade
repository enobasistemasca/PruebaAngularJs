div(class='container')
  div
    acme-navbar(creationDate='main.creationDate')
  
  h2 Edición de cliente
  hr
  
  div(class='well')
    form(ng-submit="processForm()")   
      div(class='form-group')
        label Nombre
        input(type='text' class='form-control' placeholder="Nombre" ng-model="formData.name" required)
          
      div(class='form-group')
        label Apellido
        input(type='text' class='form-control' placeholder="Apellido" ng-model="formData.lastname" required)
          
      div(class='form-group')
        label Email
        input(type='email' class='form-control' placeholder="Email" ng-model="formData.email" required)  
          
      div(class='form-group')
        label Teléfono
        input(type='text' class='form-control' placeholder="Tlf" maxlength="20" ng-model="formData.phone" required)  
        
      div(class='form-group')
        label Dirección
        input(type='text' class='form-control' placeholder="Dirección" ng-model="formData.address" required) 
        
      div(class='form-group')
        label Documento
        input(type='text' class='form-control' placeholder="Documento" maxlength="20" ng-model="formData.document" required) 
        
      div(class='form-group')
        label Compañía
        input(type='text' class='form-control' placeholder="Compañía" maxlength="80" ng-model="formData.company" required)    
      
      div(class='form-group')
        label Estatus  
                          
        select(
          class = 'form-control' 
          ng-model="formData.status" 
          ng-options="obj.valor as obj.estado for obj in options"
        )          
             
      button(type='submit' class='btn btn-primary btn-block') 
        i(class='fa fa-paper-plane-o') &nbsp;
        |Editar  
